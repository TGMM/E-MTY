@using E_MTY.Models;
@model RegisterViewModel
@{
    ViewBag.Title = "Registro";
}

<header id="registerHeader">
    <div class="center">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h1 style="margin-top:-150px; color:white; font-weight:bold">Regístrate para comenzar</h1>
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="span6">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control register-form", @placeholder = "Nombre" })
                </div>
                <div class="span6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control register-form", @placeholder = "Correo electrónico" })
                </div>
                <div class="span6">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control register-form", @placeholder = "Contraseña" })
                </div>
                <div class="span6">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control register-form", @placeholder = "Confirmar Contraseña" })
                </div>
                <div class="span6">
                    @Html.DropDownListFor(m => m.Role,
                     new SelectList(Enum.GetValues(typeof(RoleE))),
                     "Selecciona tu rol", new { @class = "form-control register-form dropdown" })
                </div>
                <br />
                <input id="homeLogin" type="submit" value="Registrarse" class="center-horizontal" style="margin-top:50px; margin-left:120px;" />
            </div>
            @Html.ValidationSummary("", new { @class = "center-bottom", style="color:white" })
        }
    </div>
</header>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}